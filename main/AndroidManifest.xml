<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.comp319.okd.libook" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BookActivity"
            android:label="@string/title_activity_book"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".BrowseActivity"
            android:label="@string/title_activity_browse"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".BookOptionsActivity"
            android:label="@string/title_activity_book_options"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".BrowseOptionsActivity"
            android:label="@string/title_activity_browse_options"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".PreviewActivity"
            android:label="@string/title_activity_preview"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog">
        </activity>
    </application>

</manifest>
